<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile_Activity"
    android:orientation="vertical"
    android:background="@drawable/blur_pink_blue">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseline_person_24"
            app:civ_border_color="@color/black"
            app:civ_border_width="3dp"
            app:civ_circle_background_color="@color/mainPrimaryColor" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="Name"
                android:textColor="@color/black"
                android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    >
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:text="Branch: "
            android:textColor="#2C2A2A"
            android:textSize="22dp"

        />
        <EditText
            android:id="@+id/txtBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:hint="Branch"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:text="Class: "
            android:paddingLeft="10dp"
            android:textColor="#2C2A2A"
            android:textSize="22dp" />
        <EditText
            android:id="@+id/txtClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:hint="Class"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:text="College: "
            android:textColor="#2C2A2A"
            android:textSize="22dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/txtCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:hint="College"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:text="Age: "
            android:paddingLeft="10dp"
            android:textColor="#2E2D2D"
            android:textSize="22dp" />
        <EditText
            android:id="@+id/txtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/mainPrimaryColor"
            android:hint="Age"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:paddingLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/mainPrimaryColor"
            android:text="Phone No: "
            android:textColor="#2C2A2A"
            android:textSize="22dp"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/txtPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/mainPrimaryColor"
            android:hint="Phone No"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_gravity="center"
    />


    </LinearLayout>
