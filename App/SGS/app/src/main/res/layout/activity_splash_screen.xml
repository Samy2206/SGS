<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtSGS"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="SGS"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/mainPrimaryColor"
        android:layout_marginBottom="20dp"
    />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginBottom="30dp"
        android:layout_width="250dp"
        android:id="@+id/animOpen"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/app_opening_anim_1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Goal Scheduler"
        android:textSize="30sp"
        android:textColor="@color/mainPrimaryDarkColor"
        android:id="@+id/txtSGS2"
    />


</LinearLayout>